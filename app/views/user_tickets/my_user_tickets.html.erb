<div class="container mx-auto mt-4">
  <h1><%= current_user.full_name %> tickets</h1>
<div class="container mx-auto mt-4">
  <div class="row">
    <% @my_user_tickets.each do |user_ticket| %>
      <div class="col-lg-3 my-3">
        <div class="card" style="width: 18rem; height: 22rem;">
          <div class="card-body position-relative">
            <h2 class="card-title"><%= user_ticket.ticket.event.title %></h2>
              <% if user_ticket.qrcode.attached? %>
                <%= cl_image_tag(user_ticket.qrcode.key, width: 300, alt: "QR code for ticket") %>
                <% end %>
              <%= link_to "Details", ticket_user_ticket_path(ticket_id: user_ticket.ticket_id, id: user_ticket.id) %>
          </div>
        </div>
      </div>
    <% end %>
          <%= link_to "Home", communities_path %>
  </div>
</div>
