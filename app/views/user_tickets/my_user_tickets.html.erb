<div class="container-fluid">
  <div class="container my-4">
    <div class="row">
      <% @my_user_tickets.each do |user_ticket| %>
        <div class="col-lg-3 col-md-6 col-sm-12 my-3 ">
          <div class="card border border-2 border-gray shadow" style="width: 100%; height: 495px;">
            <div class="image-wrapper" style="height: 500px; overflow: hidden;">
              <div class="qr-code">
                <% if user_ticket.qrcode.attached? %>
                  <div class="qr-image">
                    <%= link_to(cl_image_tag(user_ticket.qrcode.key, width: '100%', height: '100%', alt: "QR code for ticket", class: "img-fluid"), cl_image_path(user_ticket.qrcode.key), target: "_blank") %>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="details-button">
              <%= link_to "Details", ticket_user_ticket_path(ticket_id: user_ticket.ticket_id, id: user_ticket.id), class: "btn btn-dark position-absolute bottom-0 start-0 end-0" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
