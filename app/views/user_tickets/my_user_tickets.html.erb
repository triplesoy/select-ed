 <style>
  body {
    background-color: #F7F7F7;
  }
  .container-ticket {
    font-size: 13px;
    width: 90%;
    margin: 0 auto;
    padding: 20px;
    border: none;
    background-color: white;
  }
   @media (min-width: 768px) {
  .container-ticket {
    font-size: initial;
    width: 60%; /* for screens larger than 768px */
  }
  }
</style>
<div class="container-ticket">
      <%= link_to "Home", root_path %> > My Tickets

  <div class="container-fluid">
    <div class="container my-4">
      <div class="row">
        <% @my_user_tickets.each do |user_ticket| %>
          <div class="col-lg-6 col-md-12">
            <div class="card border border-2 border-gray shadow" style="width: 100%; height: auto;">
              <div class="image-wrapper" >
                <div class="qr-code">
                  <% if user_ticket.qrcode.attached? %>
                    <div class="qr-image">
                      <%= link_to(cl_image_tag(user_ticket.qrcode.key, width: '100%', height: '100%', alt: "QR code for ticket", class: "img-fluid"), cl_image_path(user_ticket.qrcode.key), target: "_blank") %>
                    </div>
                  <% end %>
                </div>
              </div>
              <div class="details-button">
                <%= link_to "Details", ticket_user_ticket_path(ticket_id: user_ticket.ticket_id, id: user_ticket.id), class: "btn btn-dark position-absolute bottom-0 start-0 end-0" %>
              </div><br><br>
            </div><br><br>
          </div>
          <br>
          <br>
        <% end %>
      </div>
    </div>
  </div>
  <div class="text-center">
    <%= link_to "Back to communities", communities_path(@community), class: "btn btn-dark" %>
  </div>
</div>
